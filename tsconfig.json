{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2022",
		"lib": [
			"ES2022"
		],
		"sourceMap": true,
		"rootDir": "src",
		"outDir": "out",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true
		/* Additional Checks */
		// "noImplicitReturns": true,
		// "noFallthroughCasesInSwitch": true,
		// "noUnusedParameters": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "out"]
}
